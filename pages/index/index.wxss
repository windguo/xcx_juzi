.tab-h{
    height: 100rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 100rpx;background: #ffffff; font-size: 36rpx;font-weight: 300; white-space: nowrap;z-index: 99999;}
.tab-item{display: inline-block;}
.cla{padding:0 20rpx;}
.tab-item.active{color: #ff4f41;position: relative;}
.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx;box-sizing: border-box; height: 180rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.scoll-h{height: 100%;}
.shareButton{margin-top:20rpx;width:100%;}
.nodata{
	margin-top:150rpx;
	color: #999;
	text-align: center;
}
.juzi-list{
    margin:0 40rpx 40rpx;
}
.juzi-item {
	width: 100%;
	background: #fff;
	border-radius: 20rpx;
	line-height: 60rpx;
	color:#333;
	margin-right: 25rpx;
	margin-bottom: 40rpx;
	font-weight: 300;
	box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
}
.juzi-item .top{
	padding:40rpx;
}
.juzi-item .top .t{
	font-size: 36rpx;
}
.juzi-item .bottom{
	background:#f9f9f9;
	border-top:1rpx solid #eee;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
	color: #282828;
	font-weight: 300;
	padding:30rpx 40rpx;
	font-size: 36rpx;
	display: flex;
	justify-content: space-between;
}
.juzi-item .bottom .username{
	max-width: 300rpx;
	text-overflow: ellipsis;
  white-space: nowrap;
	overflow: hidden;
	color:#ed6ea0;
}
.juzi-item .bottom .onclick{
	color: LightSalmon;
}

.add,.refresh{
	height: 100rpx;
	width: 100rpx;
	position: fixed;
	bottom: 200rpx;
	right: 100rpx;
	z-index: 988;
	font-size: 120rpx;
	color: #c00;
	border:0;
	border-radius: 30rpx;
	padding:0;
	outline: 0;
	line-height: normal;
}
.refresh{
	bottom:60rpx;
	color:#ff4f41;
	right:80rpx;
	font-size:90rpx;
}
.navigator-hover{
	z-index: 988;
}
.mt40{
	margin-top: 40rpx;
}


.j_header {
  position: fixed;
  width: 100%;
  top: 0;
  background-image: linear-gradient(to right, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
  color: #fff;
  z-index: 999;
	display: flex;
}
.j-title {
	position: absolute;
  text-align: center;
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #fff;
  font-weight: 300;
	z-index: 999;
}
.j-left{
	position: absolute;
	left: 0rpx;
  right: 0;
  bottom: 0;
	display: flex;
}
button[plain]{ border:0;padding:0;margin:0;margin-top:30rpx;margin-left:50rpx;color: #fff; }
.search{
	position: absolute;
	left: 100rpx;
  right: 0;
  bottom: 0;
  margin: auto;
	display: flex;
	background:#f8f8f8;
	margin-left:50rpx;
	height: 46rpx;
	line-height: 46rpx;
	border-radius: 15rpx;
	padding:10rpx 30rpx;
	color: #999;
	width: 40%;
}
.search .icon{margin-right:10rpx;}